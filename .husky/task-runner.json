{
   "tasks": [
      {
         "name": "welcome-message-example",
         "command": "bash",
         "args": [ "-c", "echo Husky.Net is awesome!" ],
         "windows": {
            "command": "cmd",
            "args": ["/c", "echo Husky.Net is awesome!" ]
         }
      },
      {
         "name": "dotnet-format",
         "command": "dotnet",
         "group": "pre-commit",
         "args": ["format", "-v","diag"],
         "include": ["**/*.cs"]
      },
      {
         "name": "roslyn analyzer",
         "command": "roslynator",
         "group": "pre-commit",
         "args": ["analyze", "--severity-level","info"],
         "include": ["**/*.csproj"]
      }
   ]
}
